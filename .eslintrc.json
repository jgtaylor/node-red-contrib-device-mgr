{
	"env": {
		"es6": true,
		"node": true,
		"commonjs": true,
		"browser": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"indent": [1, "tab"],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"always"
		],
		"space-in-parens": ["error", "always"],
		"no-console": 0,
		"no-unused-vars": 0
	},
	"globals": {
		"flow": false
	}
}